PARSER_BEGIN(Jarvis)
import java.io.*;
public class Jarvis {

  public static void main(String args[]) throws ParseException {
    Jarvis parser = new Jarvis(new FileInputStream(args[0]));
    parser.Input();
  }

}

PARSER_END(Jarvis)

SKIP : { " " | "\t" | "\r" | "\n" }

SKIP : {
   "/*": COMENTARIO
}

SKIP : {
   <COMENTARIO_1LINHA: "//"(["a"-"z","A"-"Z","_","0"-"9"," ",".","/","\\","@","%",":"])*>
}

<COMENTARIO> SKIP: {

   "*/" : DEFAULT |
   <~[]>
}

TOKEN : {

  < VIRGULA: ","> |

  < FINAL_COMANDO: ";"> |

  < ATRIBUICAO: "="> |

  < SOMA: "+"> |

  < DIFERENCA: "-"> |

  < MULTIPLICACAO: "*"> |

  < DIVISAO: "/"> |

  < POTENCIA: "^"> |

  < MAIOR: ">"> |

  < MENOR: "<"> |

  < NAO: "!"> |

  < MAIOR_IGUAL: ">="> |

  < MENOR_IGUAL: "<="> |

  < IGUAL: "=="> |

  < OU: "||"> |

  < E: "&&"> |

  < DIFERENTE: "!="> |

  < ENTRADA_DADOS: "in"> |

  < SAIDA_DADOS: "out"> |

  < CONDICIONAL_IF: "if"> |

  < CONDICIONAL_ELSE: ("else")> |

  < LACO_WHILE: "while"> |

  < ABRE_PARENTESIS: "("> |

  < FECHA_PARENTESIS: ")"> |

  < ABRE_CHAVES: "{"> |

  < FECHA_CHAVES: "}"> |
  
  < NUMERIC:  (["0"-"9"])*(".")?(["0"-"9"])+ > |
    
  < STRING:  "\""(["a"-"z","A"-"Z","_","0"-"9"," ",".","/","\\","@","%",":"])*"\"" > |

  < VARIAVEL: ["a"-"z","A"-"Z"](["0"-"9"]|["a"-"z","A"-"Z"])* > 
}

//--------------------------------------------------------------------------------------------------------------------------------------------
void Input(){}
{
    corpo() <EOF>
}
//--------------------------------------------------------------------------------------------------------------------------------------------
void corpo() {}
{
    declararVar() comandos()
}
//--------------------------------------------------------------------------------------------------------------------------------------------
void declararVar() {}
{
    "numeric" declararNum() | "string" declararStr()
}
//--------------------------------------------------------------------------------------------------------------------------------------------
void declararNum(){}
{
    <VARIAVEL> <ATRIBUICAO> expressao() <FINAL_COMANDO> | <VARIAVEL> <FINAL_COMANDO> | <VARIAVEL> <ATRIBUICAO> <NUMERIC> <FINAL_COMANDO>
}
//--------------------------------------------------------------------------------------------------------------------------------------------
void declararStr(){}
{
    <VARIAVEL> <FINAL_COMANDO> | <VARIAVEL> <ATRIBUICAO> <STRING> <FINAL_COMANDO>
}
//--------------------------------------------------------------------------------------------------------------------------------------------
void comandos(){}
{
    (comando())*
}
//--------------------------------------------------------------------------------------------------------------------------------------------
void comando(){}
{
    se() | enquanto() | leia() | exibir()
}
//--------------------------------------------------------------------------------------------------------------------------------------------
void se(){}
{
    <CONDICIONAL_IF> <ABRE_PARENTESIS> expressao() <FECHA_PARENTESIS> <ABRE_CHAVES> comandos() <FECHA_CHAVES> (<CONDICIONAL_ELSE> <ABRE_CHAVES> comandos() <FECHA_CHAVES>)?
}
//--------------------------------------------------------------------------------------------------------------------------------------------
void enquanto(){}
{
    <LACO_WHILE> <ABRE_PARENTESIS> expressao() <FECHA_PARENTESIS> <ABRE_CHAVES> comandos() <FECHA_CHAVES>
}
//--------------------------------------------------------------------------------------------------------------------------------------------
void leia(){}
{
    <VARIAVEL> <ATRIBUICAO> <ENTRADA_DADOS> <ABRE_PARENTESIS> <STRING> <FECHA_PARENTESIS> <FINAL_COMANDO>
}
//--------------------------------------------------------------------------------------------------------------------------------------------
void exibir(){}
{
    <SAIDA_DADOS> <ABRE_PARENTESIS> <STRING> ( <VIRGULA> ( experssao | <NUMERIC> | <VARIAVEL> | <STRING> )? )* <FECHA_PARENTESIS>
}
//--------------------------------------------------------------------------------------------------------------------------------------------
void expressao(){}
{
    termo() (<OU> termo())*
}
//--------------------------------------------------------------------------------------------------------------------------------------------
void termo(){}
{
    fator() (<E> fator())*
}
//--------------------------------------------------------------------------------------------------------------------------------------------
void fator(){}
{
    base() (<MAIOR> base() | <MENOR> base() | <MAIOR_IGUAL> base() | <MENOR_IGUAL> base() | <DIFERENTE> base() | <IGUAL> base())*
}   
//--------------------------------------------------------------------------------------------------------------------------------------------
void base(){}
{
    termo2() (<SOMA> termo2() | <DIFERENCA> termo2() )*
}
//--------------------------------------------------------------------------------------------------------------------------------------------
void termo2(){}
{
    fator2() (<MULTIPLICACAO> fator2() | <DIVISAO> fator2())*
}
//--------------------------------------------------------------------------------------------------------------------------------------------
void fator2(){}
{
    base2() (<POTENCIA> base2())*
}
//--------------------------------------------------------------------------------------------------------------------------------------------
void base2(){}
{
    (<NAO>)? algarismo()
}
//--------------------------------------------------------------------------------------------------------------------------------------------
void algarismo(){}
{
    <ABRE_PARENTESIS> expressao <FECHA_PARENTESIS> | <NUMERIC>
}
